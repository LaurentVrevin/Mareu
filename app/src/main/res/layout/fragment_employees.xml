<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp">


    <ImageView
        android:id="@+id/image_employee"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/tvEmployee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="tvEmployee_name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_employee"
        />
    <TextView
        android:id="@+id/tv_employee_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="tv_employee_function"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployee_name"
        app:layout_constraintStart_toEndOf="@+id/image_employee"
        />

    <TextView
        android:id="@+id/tv_employee_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="tv_employee_email"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_employee_function"
        app:layout_constraintStart_toEndOf="@+id/image_employee"/>

    <CheckBox
        android:id="@+id/item_list_meeting_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/image_employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_employee"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>